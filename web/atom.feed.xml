<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title type="text">[% feed.title %]</title>
  <updated>[% feed.updated_at %]</updated>
  <id>tag:[% request.headers.Host %],[% feed.year %]:3</id>
  <link rel="alternate" type="text/html" hreflang="en" href="http://[% request.headers.Host %]"/>
  <link rel="self" type="application/atom+xml" href="http://[% request.headers.Host %]/feed.atom"/>
  <rights>Copyright (c) [% feed.year %], [% feed.author %]</rights>
  <generator uri="http://reasonablysmart.com/" version="1.0">Smart Platform</generator>
[% FOREACH entry = feed.entries %]	
  <entry>
    <title>[% entry.title %]</title>
    <link rel="alternate" type="text/html" href="[% post.uri %]"/>
    <id>tag:[% request.headers.Host %],[% feed.year %]:3.2397</id>
    <updated>[% entry.updated %]</updated>
    <published>[% entry.created %]</published>
    <author>
      <name>[% entry.author %]</name>
      <uri>http://[% request.headers.Host %]</uri>
      <email>do.not.spam.me@example.com</email>
    </author>
		<!-- this is for comments: -->
		<!--
    <contributor>
      <name>Sam Ruby</name>
    </contributor>
		-->
    <content type="xhtml" xml:lang="en"  xml:base="http://diveintomark.org/">
      <div xmlns="http://www.w3.org/1999/xhtml">
        [% entry.body %]
      </div>
    </content>
  </entry>
[% END %]
</feed>
